<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-4.2.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.1.xsd
    http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.1.xsd">

	<bean id="loginDao" class="com.kaoping.daoimply.LoginDaoImply">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	<bean id="loginService" class="com.kaoping.service.LoginService">
		<property name="loginDao" ref="loginDao"></property>
	</bean>
	<bean id="loginAction" class="com.kaoping.action.LoginAction" scope="session">
		<property name="loginService" ref="loginService"></property>
	</bean>
</beans>